{
    "imports": {
        "@std/cli": "jsr:@std/cli@^1.0.0",
        "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
        "ink": "npm:ink@^4.4.1",
        "react": "npm:react@^18.3.1",
        "react/jsx-runtime": "npm:react@^18.3.1/jsx-runtime",
        "react/jsx-dev-runtime": "npm:react@^18.3.1/jsx-dev-runtime",
        "react-dom": "npm:react-dom@^18.3.1",
        "openai": "npm:openai@^4.58.1",
        "@anthropic-ai/sdk": "npm:@anthropic-ai/sdk@^0.27.3"
    },
    "compilerOptions": {
        "lib": ["deno.ns", "deno.window"],
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "types": ["npm:@types/react@^18.3.12"]
    },
    "tasks": {
        "dev": "deno run --allow-net --allow-env --allow-read src/main.tsx",
        "start": "deno run --allow-net --allow-env --allow-read src/main.tsx",
        "release": "deno compile --allow-net --allow-env --allow-read --output harmony src/main.tsx",
        "release:macos": "deno compile --allow-net --allow-env --allow-read --target aarch64-apple-darwin --output .build/macos-arm64/harmony src/main.tsx",
        "release:macos-x86": "deno compile --allow-net --allow-env --allow-read --target x86_64-apple-darwin --output .build/macos-x64/harmony src/main.tsx",
        "release:linux": "deno compile --allow-net --allow-env --allow-read --target x86_64-unknown-linux-gnu --output .build/linux-x64/harmony src/main.tsx",
        "release:linux-arm": "deno compile --allow-net --allow-env --allow-read --target aarch64-unknown-linux-gnu --output .build/linux-arm64/harmony src/main.tsx",
        "release:windows": "deno compile --allow-net --allow-env --allow-read --target x86_64-pc-windows-msvc --output .build/windows-x64/harmony src/main.tsx",
        "release:all": "deno task release:macos && deno task release:macos-x86 && deno task release:linux && deno task release:linux-arm && deno task release:windows"
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true
    }
}
